# 保存先ディレクトリ（プロジェクトルートからの相対パス）
BACKUP_DIR=backup

# 使用する sentence-transformers モデル名
MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2

# クロール処理の同時実行数（非同期でのリクエスト並列数）
CONCURRENCY=10

# 埋め込み処理時の最大トークン長
EMBEDDING_MAX_LENGTH=512

# 埋め込み処理のバッチサイズ
EMBEDDING_BATCH_SIZE=32

# FAISSのインデックス種別（flat_l2 など）
FAISS_INDEX_TYPE=flat_l2

# クロール対象の設定ファイル（プロジェクトルート直下に置かれるYAML）
SITES_YAML=sites.yaml